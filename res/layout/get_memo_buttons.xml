<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<ImageButton
		android:layout_height="wrap_content"
		android:layout_width="0dp"
		android:layout_weight=".333"
		android:background="@drawable/btn_strip_trans_left"
		android:src="@drawable/ic_mic"
		android:contentDescription="@string/record_button_description"
		android:onClick="onCreateMemo" />

	<ImageButton
		android:layout_height="wrap_content"
		android:layout_width="0dp"
		android:layout_weight=".33"
		android:background="@drawable/btn_strip_trans_middle"
		android:src="@drawable/ic_photo"
		android:contentDescription="@string/take_picture_button_description"
		android:onClick="onTakePicture" />

	<ImageButton
		android:layout_height="wrap_content"
		android:layout_width="0dp"
		android:layout_weight=".33"
		android:background="@drawable/btn_strip_trans_right"
		android:src="@drawable/ic_home"
		android:contentDescription="@string/home_button_description"
		android:onClick="onGoHome" />

</LinearLayout>
